  return (
    <tr className="hover:bg-gray-50">
      <td className="px-6 py-4 text-sm font-medium text-gray-900 whitespace-nowrap">
        {stat.match_number}
      </td>
      <td className="px-6 py-4 text-sm text-gray-700 whitespace-nowrap">
        {stat.match_date ? new Date(stat.match_date).toLocaleDateString() : "-"}
      </td>
      <td className="px-6 py-4 text-sm text-gray-700 min-w-[150px]">
        {stat.opponent || "-"}
      </td>
      <td className="px-6 py-4 text-center text-sm whitespace-nowrap">{stat.runs}</td>
      <td className="px-6 py-4 text-center text-sm whitespace-nowrap">{stat.balls_played}</td>
      <td className="px-6 py-4 text-center whitespace-nowrap">
        <div className="flex justify-center">
          {stat.is_fifty && <span className="text-green-600 font-bold">âœ“</span>}
        </div>
      </td>
      <td className="px-6 py-4 text-center whitespace-nowrap">
        <div className="flex justify-center">
          {stat.is_hundred && <span className="text-green-600 font-bold">âœ“</span>}
        </div>
      </td>
      <td className="px-6 py-4 text-center whitespace-nowrap">
        <div className="flex justify-center">
          {stat.not_out && <span className="text-green-600 font-bold">âœ“</span>}
        </div>
      </td>
      <td className="px-6 py-4 text-center text-sm whitespace-nowrap">{stat.wickets}</td>
      <td className="px-6 py-4 text-center whitespace-nowrap">
        <div className="flex justify-center">
          {stat.is_five_wicket && <span className="text-green-600 font-bold">âœ“</span>}
        </div>
      </td>
      <td className="px-6 py-4 text-center whitespace-nowrap">
        <div className="flex justify-center">
          {stat.is_ten_wicket && <span className="text-green-600 font-bold">âœ“</span>}
        </div>
      </td>
      <td className="px-6 py-4 text-center text-sm whitespace-nowrap">{stat.overs_bowled}</td>
      <td className="px-6 py-4 text-center text-sm whitespace-nowrap">{stat.runs_conceded}</td>
      <td className="px-6 py-4 text-center text-sm whitespace-nowrap">{stat.catches}</td>
      <td className="px-6 py-4 text-center text-sm whitespace-nowrap">{stat.runouts}</td>
      <td className="px-6 py-4 text-center text-sm whitespace-nowrap">{stat.stumpings}</td>
      <td className="px-6 py-4 text-center text-sm whitespace-nowrap">{stat.catches_dropped}</td>
      <td className="px-6 py-4 text-center text-sm whitespace-nowrap">{stat.stumpings_missed}</td>
      {isAdmin && (
        <td className="px-6 py-4 text-center whitespace-nowrap">
          <div className="flex items-center justify-center gap-2">
            <button
              onClick={() => onEdit(stat)}
              className="text-primary-600 hover:text-primary-800 transition-colors"
              title="Edit"
            >
              <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            </button>
            <button
              onClick={() => onDelete(stat.id, stat.match_number)}
              className="text-red-600 hover:text-red-800 transition-colors"
              title="Delete"
            >
              <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            </button>
          </div>
        </td>
      )}
    </tr>
  );
}

function AddStatModal({
  seasonId,
  playerId,
  nextMatchNumber,
  onClose,
  onSuccess,
}: {
  seasonId: string;
  playerId: string;
  nextMatchNumber: number;
  onClose: () => void;
  onSuccess: () => void;
}) {
  const [formData, setFormData] = useState({
    match_date: "",
    opponent: "",
    runs: 0,
    balls_played: 0,
    not_out: false,
    wickets: 0,
    overs_bowled: 0,
    runs_conceded: 0,
    catches: 0,
    runouts: 0,
    stumpings: 0,
    catches_dropped: 0,
    stumpings_missed: 0,
  });
  const [loading, setLoading] = useState(false);

  async function handleSubmit(e: React.FormEvent) {
    e.preventDefault();
    if (!supabase) return;

    setLoading(true);

    const runs = formData.runs;
    const wickets = formData.wickets;

    const { error } = await supabase.from("player_season_stats").insert([
      {
        season_id: seasonId,
        player_id: playerId,
        match_number: nextMatchNumber,
        match_date: formData.match_date || null,
        opponent: formData.opponent || null,
        runs,
        balls_played: formData.balls_played,
        is_fifty: runs >= 50 && runs < 100,
        is_hundred: runs >= 100,
        not_out: formData.not_out,
        wickets,
        is_five_wicket: wickets >= 5 && wickets < 10,
        is_ten_wicket: wickets >= 10,
        overs_bowled: formData.overs_bowled,
        runs_conceded: formData.runs_conceded,
        catches: formData.catches,
